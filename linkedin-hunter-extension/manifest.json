{
  "manifest_version": 3,
  "name": "LinkedIn Hunter",
  "version": "1.0",
  "description": "Fetch LinkedIn profile details and email using Hunter.io",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/in/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
